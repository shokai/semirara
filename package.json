{
  "private": true,
  "name": "semirara",
  "version": "0.0.1",
  "description": "wiki",
  "main": "run-server.js",
  "engines": {
    "node": "12.14.0",
    "npm": "6.x"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "node run-server.js",
    "start:dev": "DEBUG=semirara*,koa* node-dev run-server.js",
    "test": "npm run eslint && npm run mocha",
    "mocha": "mocha 'src/{*,**/*}/test/*.js' --compilers js:babel-register -r babel-polyfill",
    "eslint": "eslint 'src/*/{*,**/*}.{js,jsx}'",
    "browserify": "browserify --verbose --extension=.jsx -t [ babelify ] -t [ browserify-shim ] -g uglifyify src/client/index.js -o public/dist/index.js",
    "watchify": "watchify --verbose --debug --extension=.jsx -t [ babelify ] -p browserify-notify src/client/index.js -o public/dist/index.js",
    "build": "npm run babel && npm run browserify && npm run stylus",
    "stylus": "stylus -I node_modules/nib/lib -I node_modules/highlight.js/styles --include-css src/client/styl/index.styl -o public/dist/index.css",
    "babel": "babel src/ --out-dir dist/ --source-maps inline",
    "watch": "parallelshell 'chokidar \"src/**.{js,jsx}\" -c \"npm run test\"' 'npm run babel -- --watch' 'npm run watchify' 'npm run stylus -- --watch'",
    "clean": "rm -rf 'dist/*' 'public/dist/*'"
  },
  "keywords": [
    "wiki",
    "outline"
  ],
  "author": "Sho Hashimoto <hashimoto@shokai.org>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.11.0",
    "babel-cli": "^6.5.1",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-regenerator-runtime": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "classnames": "^2.2.3",
    "clone": "^1.0.2",
    "cookie": "^0.3.1",
    "date-utils": "^1.2.21",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "feed": "^0.3.0",
    "has-dom": "^1.0.0",
    "highlight.js": "^9.3.0",
    "koa": "^2.0.0",
    "koa-66": "^0.8.4",
    "koa-convert": "^1.2.0",
    "koa-logger": "^2.0.0",
    "koa-react-view": "^2.0.0",
    "koa-static": "^2.0.0",
    "lodash.uniq": "^4.2.1",
    "md5": "^2.0.0",
    "memjs": "^0.10.0",
    "mongoose": "^5.10.7",
    "mongoose-auto-increment": "^5.0.1",
    "nib": "^1.1.0",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "redux": "^3.4.0",
    "shortid": "^2.2.6",
    "socket.io": "^1.4.6",
    "socket.io-client": "^1.4.6",
    "socket.io-request": "^0.1.0",
    "stylus": "^0.54.2",
    "uglifyify": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "babel-register": "^6.5.2",
    "browserify-notify": "^1.1.2",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^2.7.0",
    "eslint-plugin-if-in-test": "^0.2.0",
    "eslint-plugin-react": "^5.0.1",
    "mocha": "^2.4.5",
    "node-dev": "^3.1.0",
    "parallelshell": "^2.0.0",
    "supertest": "^1.2.0",
    "watchify": "^3.7.0"
  },
  "browserify-shim": {
    "socket.io-client": "global:io",
    "react": "global:React",
    "react-dom": "global:ReactDOM",
    "highlight.js": "global:hljs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shokai/semirara.git"
  },
  "bugs": {
    "url": "https://github.com/shokai/semirara/issues"
  },
  "homepage": "https://github.com/shokai/semirara#readme"
}
