body
  background-color: #66878D
  font: 12pt "Lucida Grande", Helvetica, Arial, sans-serif
  color: #fafafa

div, span, ul, li, textarea
  margin: 0px
  padding: 0px

div.app
  max-width: 800px

div.login
  font-size: 12pt
  float: right
  li
    display: inline-block
    margin-right: 5px
    span
      padding: 10px 4px 2px 4px
      background-color: white
  img
    margin: 0px

div.editor
  float: right
  width: 100%
  max-width: 600px
  textarea
    width: 100%
    height: 300px
  a, span.link
    color: white
    cursor: pointer
    text-decoration: underline

div.pagelist
  width: 200px
  float: left
  li
    height: 30px
    cursor: pointer
    padding: 3px
    margin: 1px
    &:hover
      background-color: #56777D
